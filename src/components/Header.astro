---
import Navigation from '../components/Navigation.astro'
import { DarkMode, SkipLink } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'

/**
 * Header Component
 *
 * @description A component that displays the header of the website
 */
---

<header>
  <SkipLink />
  <Navigation>
    <li class="menu-item">
      <a href="/">Pradžia</a>
    </li>
    <li class="menu-item">
      <a href="/apie/">Apie</a>
    </li>
    <li class="menu-item">
      <a href="/įrašai/">Įrašai</a>
    </li>
    <li class="menu-item">
      <a href="/duk/">DUK</a>
    </li>
    <li class="menu-item highlight">
      <a href="https://forms.gle/68un9hhzhYMXGumu8" target="_blank" rel="noopener noreferrer">Registruotis</a>
    </li>
    <li class="menu-item type-icon animate-rotate">
      <a href="https://instagram.com/litmolimpiada" target="_blank" rel="noopener noreferrer">
        <Icon name="lucide:instagram" />
        <span class="sr-only">Apsilankykite mūsų Instagram puslapyje</span>
      </a>
    </li>
    <li class="menu-item type-icon animate-rotate">
      <a href="https://www.facebook.com/people/Lietuvos-medicinos-olimpiada/61579093988240/" target="_blank" rel="noopener noreferrer">
        <Icon name="lucide:facebook" />
        <span class="sr-only">Apsilankykite mūsų Facebook puslapyje</span>
      </a>
    </li>
    <li class="menu-item type-icon animate-rotate">
      <DarkMode>
        <Icon name="lucide:moon" slot="light" />
        <Icon name="lucide:sun" slot="dark" />
      </DarkMode>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  header {
    .type-icon {
      display: block;
      margin-inline: -7px;

      svg {
        inline-size: 30px;
        block-size: 30px;
      }
    }
  }
</style>
