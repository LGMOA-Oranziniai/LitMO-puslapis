---
import { Icon } from 'astro-icon/components'
import { Image } from 'astro:assets'
import Logo from '@assets/img/LitMO.svg'

/**
 * Hero Component
 *
 * @description A component that displays a hero section with a title, description, and image
 */
interface Props {
  /**
   * The source URL for the image
   */
  src?: string
}

const { src }: Props = Astro.props
const hasSrc = typeof src === 'string' && src.length > 0
---

<section class="hero">
  <div class="container">
    <div class="grid grid-cols-1 items-center gap-24 lg:grid-cols-2">
      <div class="flex flex-col items-center gap-8 md:items-start">
        <h1 class="text-center text-6xl md:text-left lg:text-8xl">
          <slot>Lietuvos moksleivi≈≥ <span class="text-gradient">medicinos</span> olimpiada</slot>
        </h1>
        <div class="flex flex-col gap-3 min-[500px]:flex-row">
          <a class="button has-icon" href="/apie">
            <Icon name="lucide:circle-question-mark" />
            Apie
          </a>
          <a class="button has-icon color-secondary" href="https://docs.google.com/forms/d/e/1FAIpQLSemrR3aHMSc3uhN8XsWXvDRGLRh0krxqPbUbW7J69l-riNDHg/viewform">
            <Icon name="lucide:notebook-pen" />
            Registruotis
          </a>
        </div>
      </div>
    {hasSrc ? (
        <Image
          class="hidden lg:block"
      src={src as string}
          alt=""
          decoding="async"
          width={800}
          height={600}
          loading="eager"
        />
      ) : (
        <Logo class="hidden lg:block" aria-hidden="true" />
      )}
    </div>
  </div>
</section>

<style lang="scss">
  h1 {
    text-wrap: unset;
  }

  .text-gradient {
    background: linear-gradient(
      315deg,
      light-dark(var(--color-primary-300), var(--color-secondary-100)) 25%,
      light-dark(var(--color-secondary-300), var(--color-primary-200))
    );
    background-clip: border-box;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
</style>
